{{#section 'css'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">

<style>
    .tags {
        background: rgb(216, 216, 216);
        padding: 2px;
        margin-left: 3px;
        color: black;
        border: 1px solid rgb(207, 207, 207);
        box-shadow: 1px 2px rgb(224, 224, 224);
    }

    .company-img img {
        height: 100%;
        width: 240px;
        object-fit: cover
    }

    .input-group.md-form.form-sm.form-1 input {
        border: 1px solid #bdbdbd;
        border-top-right-radius: 0.25rem;
        border-bottom-right-radius: 0.25rem;
    }

    #textSearch {
        display: flex;
        justify-content: center;
    }

    #inputSearch1 {
        color: black !important;
    }
</style>
{{/section}}

{{#section 'js'}}
<script>
    $(document).ready(function () {
        $('#btnSearch').click(function () {
            var inputSearch = $('#inputSearch1').val();
            var url = '/post/search?key=' + inputSearch;
            alert(url)
            window.location = url;
        })
    })
</script>
{{/section}}

<main>
    <!-- breadcrumb Start-->
    <div class="page-notification">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            {{#if nameCat1}}
                            <li class="breadcrumb-item"><a href="/cat/{{data.0.keyCat1}}">{{nameCat1}}</a></li>
                            {{/if}}

                            {{#if nameCat2}}
                            <li class="breadcrumb-item"><a href="/cat/{{data.0.keyCat2}}">{{nameCat2}}</a></li>
                            {{/if}}

                            {{#if isTag}}
                            <li class="breadcrumb-item"><a href="#!">Tag</a></li>
                            {{/if}}
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb End -->

    <!-- Search bar -->
    <div id="textSearch">
        <input {{#if key}}{{else}} placeholder="Nhập nội dung tìm kiếm" {{/if}} style="width: 50%;"
            value="{{#if key}}{{key}}{{/if}}" id='inputSearch1'>
        <button class="genric-btn primary-border radius" type="button" id='btnSearch'>SEARCH</button>
    </div>


    <div class="container text-center mt-5">
        <div class="row">
            <div class="col-3 col-xl-5 my-auto" >
                <hr style=" border-top:black solid 2px; ">
            </div>
            <div class="col-6 col-xl-2  my-auto">
                <h2>Kết quả tìm kiếm</h2>
            </div>
            <div class="col-3 col-xl-5 my-auto">
                <hr style=" border-top:black solid 2px; ">
            </div>
        </div>
    </div>

    <!-- End Search-->
    <!-- Top Posts Start -->
    <div class="top-post-area">
        <div class="container">
            {{!-- <div class="row">
                <div class="col-12">
                    <div class="section-tittle mb-35">
                        <h2>Top Posts</h2>
                    </div>
                </div>
            </div> --}}
            <div class="row justify-content-lg-between">
                <div class="col-lg-9 col-md-8 mx-auto">

                    <!-- single-job-content -->
                    {{#each data}}
                    <div class="single-job-items mb-30">

                        <div class="job-items">
                            <div class="company-img">
                                <a href="/post?id={{id}}"><img src="{{urlPic}}"></a>
                            </div>

                            <div class="job-tittle">
                                <div class="d-flex d-flex justify-content-between align-items-center mr-5">
                                    <div class="">
                                        <a href="/cat/{{keyCat1}}/{{keyCat2}}">
                                            <p style="text-transform: uppercase;"> {{nameCat2}}</p>
                                        </a>
                                    </div>
                                    <div class="">
                                        <small>{{dateUpload}}</small>
                                    </div>
                                </div>

                                <a href="/post?id={{id}}">
                                    <h4 style="margin-bottom: 5px; margin-top:5px;">{{title}}</h4>
                                </a>
                                <p> {{summary}} </p>
                                <div class="mb-5 mt-2">
                                    <!--
                                    {{#each listTag}}
                                    {{#when @index 'lt' '4'}}
                                    <a href="/tag/{{../this.key}}" style="overflow-wrap: anywhere;">
                                        <small class="tags">{{../this.name}}</small>
                                    </a>
                                    {{/when}}
                                    {{/each}}
                                    -->

                                    {{#each listNameOfTag}}
                                    <a href="/tag/{{lookup ../this.listKeyOfTag @index}}"
                                        style="overflow-wrap: anywhere; display: {{#when @index 'gt' '3'}} none{{/when}}">
                                        <small class="tags">{{.}}</small>
                                    </a>
                                    {{/each}}
                                </div>

                            </div>
                        </div>
                    </div>
                    <hr>
                    {{/each}}
                </div>

            </div>
        </div>
    </div>
    <!-- Top Posts End -->

    <!--Pagination Start  -->
    <div class="pagination-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="single-wrap d-flex justify-content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start " id="myDIV">
                                <li class="page-item"><a class="page-link" href=""><span
                                            class="ti-angle-left"></span></a></li>

                                {{#each page_numbers}}
                                <li class="page-item {{#if isCurrent}}active{{/if}}">
                                    <a class="page-link" href="?page={{value}}"> {{value}} </a>
                                </li>

                                {{/each}}


                                {{!-- <li class="page-item active"><a class="page-link" href="#">01</a></li>
                                <li class="page-item"><a class="page-link" href="#">02</a></li>
                                <li class="page-item"><a class="page-link" href="#">03</a></li> --}}

                                <li class="page-item"><a class="page-link" href="#"><span
                                            class="ti-angle-right"></span></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Pagination End  -->

</main>