<script>

    $(document).ready(function () {
        $("#btnUpdateProfile").click(function () {

            $('#nameOfUser').removeAttr('readonly');
            $('#nameOfUser').focus()

            $('#gmail').removeAttr('readonly');
            $('#dayOfBirth').removeAttr('readonly');
            $('#dayOfBirth').datetimepicker({
                format: 'd/m/Y',
                timepicker: false,
                mask: true
            });
            $('#phoneNumber').removeAttr('readonly');


            $("#btnModalChangeAva").removeAttr("data-target")
            $("#btnModalChangeAva").addClass("editingProfile");

            $("#btnUpgradePremium").addClass("editingProfile");

            $("#btnChangePassword").hide()
            $("#btnUpdateProfile").hide()

            $("#btnCancelUpadte").show()
            $("#btnSaveUpdate").show()



        });

        $("#btnModalChangeAva").click(function () {
            if ($("#btnModalChangeAva").hasClass('editingProfile')) {
                alert('You are editing your profile!\nPlease complete editing process.')
            }
        })

        $("#btnUpgradePremium").click(function () {
            if ($("#btnModalChangeAva").hasClass('editingProfile')) {
                alert('You are editing your profile!\nPlease complete editing process.')
            }
            else {
                //submit form
                alert('Submit to server!')
            }
        })
    })
</script>

