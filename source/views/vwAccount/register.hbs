    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

<script>

    $(document).ready(function () {

        //---------------userName----------------------
        $("#userName").blur(function () {
            const username = $("#userName").val();
            const noti = $('#txtRequireUserName');
            //alert('abcksj')
            if (username.length === 0) {
                noti.html("Please fill out your username");
                noti.css('color', 'red');
            }

        });

        $("#userName").keyup(function () {
            const username = $('#userName').val();
            const noti = $('#txtRequireUserName');

            if (username.length === 0) {
                noti.html("Please fill out your username");
                noti.css('color', 'red');
            }
            else {
                noti.html("Ok");
                noti.css('color', 'blue');
            }
        });

        //----------------full name-----------------------
        $("#nameOfUser").blur(function () {
            const username = $("#nameOfUser").val();
            const noti = $('#txtRequireNameOfUser');

            if (username.length === 0) {
                noti.html("Please fill out your name");
                noti.css('color', 'red');
            }
            else {
                noti.html("Ok");
                noti.css('color', 'blue');
            }
        });

        $("#nameOfUser").keyup(function () {
            const username = $('#nameOfUser').val();
            const noti = $('#txtRequireNameOfUser');

            if (username.length === 0) {
                noti.html("Please fill out your name");
                noti.css('color', 'red');
            }
            else {
                noti.html("Ok");
                noti.css('color', 'blue');
            }
        });

        //---------------- Gmail----------------
        $("#gmail").blur(function () {
            const gmail = $('#gmail').val();
            const noti = $('#txtRequireGmail');
            if (!validateEmail(gmail)) {
                noti.html("Please fill out your Gmail");
                noti.css('color', 'red');
            }
            else {
                noti.html("Ok");
                noti.css('color', 'blue');
            }
        })

        //-------------password------------------

        $("#password").blur(function () {
            const password = $('#password').val();
            const noti = $('#txtRequirePassword');
            if (password.length === 0) {
                noti.html("Please fill out your password");
                noti.css('color', 'red');
            }
        })

        $("#password").keyup(function () {
            const noti = $("#txtRequirePassword")
            const pwd = String($("#password").val());
            console.log(pwd)
            var strongRegex = new RegExp("^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!_.@#\$%\^&\*])(?=.{8,})");
            var mediumRegex = new RegExp("^(((?=.*[a-z])(?=.*[A-Z]))|((?=.*[a-z])(?=.*[0-9]))|((?=.*[A-Z])(?=.*[0-9])))(?=.{6,})");
            var enoughRegex = new RegExp("(?=.{6,}).*", "g");
            if (pwd.length == 0) {
                noti.html('Type Password');
                noti.css('color', 'red');
                //console.log("Type Password")
            } else if (false == enoughRegex.test(pwd)) {
                noti.html('More Characters');
                noti.css('color', 'Orangered');
                //console.log("More Characters")
            } else if (strongRegex.test(pwd)) {
                noti.html('Strong!');
                noti.css('color', 'green');
                //console.log("Strong")
            } else if (mediumRegex.test(pwd)) {
                noti.html('Medium');
                noti.css('color', 'lightgreen');
                //console.log("Medium")
            } else {
                noti.html('Weak!');
                noti.css('color', 'LightSalmon');
                //console.log("Weak")
            }

        })


        //-------------confirm password------------------
        $("#confirmPassword").keyup(function () {
            //alert('asdhk')
            const confirmPassword = String($("#confirmPassword").val())
            const password = String($("#password").val())
            console.log(confirmPassword, password)
            const noti = $("#txtRequireConfirmPassword")
            if (confirmPassword.localeCompare(password) === 0) {
                noti.html('Match')
                noti.css('color', 'green');
            }
            else {
                noti.html('Not Match')
                noti.css('color', 'red');
            }
        })

        //check email validation
        function validateEmail(email) {
            const re = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(String(email).toLowerCase());
        }

        //check bitthday validation
        function validateBirthday(str) {
            var temp = str.split('/');
            const nowDate = new Date();
            if (parseInt(temp[2]) < nowDate.getFullYear()) {
                return true;
            } else{
                if (parseInt(temp[1]) <= nowDate.getMonth() + 1) {
                    if (parseInt(temp[0]) <= nowDate.getDate())
                        return true;
                }
            }
            return false;
        }


        $('#frmRegister').on('submit', function (e) {

            const userName = $('#userName').val();
            if (userName.length === 0) {
                $("#txtRequireUserName").html("Please fill out your username");
                $("#txtRequireUserName").css('color', 'red');
                alert("Your user name is not valid")
                e.preventDefault()
                return;
            }

            //check existing account
            //$.getJSON(`/user/isAvailableUsername?userName=${userName}`, async function (data) {
            //alert(data);
            //console.log(data);
            //if (data) {
            //    alert('Not available!');
            //} else {
            //$('#frmRegister').off('submit').submit();
            //  alert('available!');
            //}
            // });

            const nameOfUser = $('#nameOfUser').val();
            if (nameOfUser.length === 0) {
                $("#txtRequireNameOfUser").html("Please fill out your full name");
                $("#txtRequireNameOfUser").css('color', 'red');
                alert("Your name is not valid")
                e.preventDefault()
                return;
            }

            const gmail = $('#gmail').val();
            if (!validateEmail(gmail)) {
                $("#txtRequireGmail").html("Please fill out your Gmail");
                $("#txtRequireGmail").css('color', 'red');
                alert("Your Gmail is not valid")
                e.preventDefault()
                return;
            }

            const DOB = $("#dayOfBirth").val();
            if (!validateBirthday(String(DOB))) {
                alert("Your birthday is not valid")
                e.preventDefault()
                return;
            } 

            const password = String($("#password").val())
            if (password.length < 6) {
                alert("Your password must have at least 6 characters")
                e.preventDefault()
                return;
            }

            const confirmPassword = String($("#confirmPassword").val())
            if (confirmPassword.localeCompare(password) !== 0) {
                alert("The confirm password does not match with your password")
                e.preventDefault()
                return;
            }

        })


        $('#dayOfBirth').datetimepicker({
            format: 'd/m/Y',
            timepicker: false,
            mask: true 
        });
    });

</script>
{{/section}}



<main>
    <!-- breadcrumb Start-->
    <div class="page-notification">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Sign Up</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb End -->
    <!-- Register Area Start -->
    <form id="frmRegister" method="POST">
        <div class="register-form-area">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-8">
                        <div class="register-form text-center">
                            <!-- Login Heading -->
                            <div class="register-heading">
                                <span>Sign Up</span>
                                <p>Create your account to get full access</p>
                            </div>
                            <!-- Single Input Fields -->
                            <div class="input-box">

                                {{#if this.error}}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    {{this.error}}
                                </div>
                                {{/if}}
                                {{!-- username --}}
                                <div class="single-input-fields">
                                    <div class="d-flex justify-content-between">
                                        <label>User Name</label>
                                        <span class="txtRequire" id="txtRequireUserName" style="
                                            {{#if errorUserName}}
                                                color: red;
                                            {{else}}
                                                {{#if this.error}}
                                                    color: blue;
                                                {{/if}}
                                            {{/if}}">
                                            {{#if errorUserName}}
                                            This username is used
                                            {{else}}
                                            {{#if this.error}}
                                            Ok
                                            {{else}}
                                            Require
                                            {{/if}}
                                            {{/if}}
                                        </span>
                                    </div>
                                    <input type="text" id="userName" name="userName" placeholder="Enter username"
                                        value="{{#if errorGmail}}{{this.data.userName}}{{/if}}">
                                </div>

                                {{!-- Full Name --}}
                                <div class="single-input-fields">
                                    <div class="d-flex justify-content-between">
                                        <label>Full Name</label>
                                        <span class="txtRequire" id="txtRequireNameOfUser" style="
                                            {{#if this.error}}
                                                color: blue;
                                            {{/if}}">{{#if this.error}}
                                            Ok
                                            {{else}}
                                            Require
                                            {{/if}}</span>
                                    </div>
                                    <input type="text" id="nameOfUser" name="nameOfUser" placeholder="Enter full name"
                                        value="{{#if error}}{{this.data.nameOfUser}}{{/if}}">
                                </div>

                                {{!-- Gamil --}}
                                <div class="single-input-fields">
                                    <div class="d-flex justify-content-between">
                                        <label>Gmail Address</label>
                                        <span class="txtRequire" id="txtRequireGmail" style="
                                            {{#if errorGmail}}
                                                color: red;
                                            {{else}}
                                                {{#if this.error}}
                                                    color: blue;
                                                {{/if}}
                                            {{/if}}">{{#if errorGmail}}This gmail is
                                            used{{else}}{{#if this.error}}
                                            Ok
                                            {{else}}
                                            Require
                                            {{/if}}{{/if}}</span>
                                    </div>
                                    <input type="" placeholder="Enter gmail address" id="gmail" name="gmail"
                                        value="{{#if errorUserName}}{{this.data.gmail}}{{/if}}">
                                </div>


                                <div class="d-flex justify-content-between">
                                    {{!-- birthday --}}
                                    <div class="single-input-fields mr-10">
                                        <label>Date of birth</label>
                                        <input type="" id="dayOfBirth" name="dayOfBirth"
                                            value="{{#if error}}{{this.data.dayOfBirth}}{{/if}}">
                                    </div>

                                    {{!-- phone number --}}
                                    <div class="single-input-fields">
                                        <label>Your phone</label>
                                        <input type="" id="txtPhoneNumber" name="phoneNumber"
                                            placeholder="Enter phone number"
                                            value="{{#if error}}{{this.data.phoneNumber}}{{/if}}">
                                    </div>
                                </div>

                                {{!-- rule --}}
                                {{!-- <div class="single-input-fields">
                                    <div class="row">
                                        <div class="col">
                                            <label for="permission">Rule</label>
                                            <select multiple id="permission" name="permission" class="mb-15">
                                                <option value="1" selected="selected">Độc giả</option>
                                                <option value="2">Phóng viên</option>
                                                <option value="3">Quản trị viên</option>
                                            </select>
                                        </div>
                                    </div>
                                </div> --}}


                                {{!-- password --}}
                                <div>
                                    <div class="single-input-fields">
                                        <div class="d-flex justify-content-between">
                                            <label>Password</label>
                                            <span class="txtRequire" id="txtRequirePassword">Require</span>
                                        </div>
                                        <input type="password" id="password" name="password"
                                            placeholder="Enter Password">
                                    </div>
                                </div>
                                {{!-- confirm password --}}
                                <div class="single-input-fields">
                                    <div class="d-flex justify-content-between">
                                        <label>Confirm Password</label>
                                        <span class="txtRequire" id="txtRequireConfirmPassword"></span>
                                    </div>
                                    <input type="password" id="confirmPassword" placeholder="Confirm Password">
                                </div>
                            </div>
                            <!-- form Footer -->
                            <div class="register-footer">
                                <p> Already have an account? <a href="/user/login"> Login</a> here</p>
                                <button type="submit" class="submit-btn3">Sign Up</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Register Area End -->
</main>