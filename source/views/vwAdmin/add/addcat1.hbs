<script>
  //$( "input" ).prop( "disabled", true ); //Disable


  function addlist() {
    var mydiv = document.createElement("div");
    mydiv.className = "form-group";
    mydiv.style = "";
    //mydiv.innerText = "12312455";

    var label1 = document.createElement("div");
    label1.className = "col-sm-2 control-label";
    label1.innerText = "Khóa chuyện mục cấp 2";
    label1.style = "font-weight: bold;";

    var div1 = document.createElement("div");
    div1.className = "col-sm-3"

    var input1 = document.createElement("input");
    input1.type = "text";
    input1.className = "form-control";
    input1.value = "";
    input1.name = "listKey2[]"
    input1.placeholder = "Nhập khóa"

    mydiv.appendChild(label1);
    div1.appendChild(input1)
    mydiv.appendChild(div1);



    var label2 = document.createElement("div");
    label2.className = "col-sm-2 control-label";
    label2.innerText = "Tên chuyện mục cấp 2";
    label2.style = "font-weight: bold;";

    var div2 = document.createElement("div");
    div2.className = "col-sm-3"

    var input2 = document.createElement("input");
    input2.type = "text";
    input2.className = "form-control";
    input2.value = "";
    input2.name = "listName2[]"
    input2.placeholder = "Nhập tên chuyên mục cấp 2"

    mydiv.appendChild(label2);
    div2.appendChild(input2);
    mydiv.appendChild(div2);


    document.getElementById("myList").appendChild(mydiv);
  }
</script>
<script>
    $("#li_1").addClass('active');
