<main>
  <form class="form-horizontal" action="" method="POST">
    <div class="form-group" style="text-align: center;">
      <div class="form-group" style="text-align: center;">
        <label for="inputEmail3" class="col-sm-2 control-label">Khóa chuyên mục cấp 1</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="" value="" name="keyCat1" placeholder="Nhập khóa">
        </div>
      </div>
      <div class="form-group" style="text-align: center;">
        <label for="inputEmail3" class="col-sm-2 control-label">Tên chuyên mục cấp 1</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="" value="" name="nameCat1" placeholder="Nhập tên chuyên mục cấp 1">
        </div>
      </div>
      <div class="form-group" style="text-align: center;">
        <label for="inputEmail3" class="col-sm-2 control-label">Người quản lý</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="" value="" name="adminCat1" placeholder="Nhập tên người quản lý">
        </div>
      </div>
    </div>

    <div class="form-group" style="text-align: center;">
      <div id='myList' class='list-group' style="text-align: center;">
        <div class="form-group" style="text-align: center;">
          <label for="inputPassword3" class="col-sm-2 control-label">Khóa chuyện mục cấp 2</label>
          <div class="col-sm-3">
            <input type="text" class="form-control" id="inputPassword3" name="listKey2[]" value="" placeholder="Nhập khóa">
          </div>
          <label for="inputPassword3" class="col-sm-2 control-label">Tên chuyên mục cấp 2</label>
          <div class="col-sm-3">
            <input type="text" class="form-control" id="inputPassword3" name="listName2[]" value="" placeholder="Nhập tên chuyên mục cấp 2">
          </div>
        </div>
        {{#each this.db.listCat}}
        <div class="form-group" style="text-align: center;">
          <label for="inputPassword3" class="col-sm-2 control-label" placeholder="Nhập khóa"></label>
          <div class="col-sm-3">
            <input type="text" class="form-control" id="inputPassword3" name="listKey2[]" value="" placeholder="Nhập khóa">
          </div>
          <label for="inputPassword3" class="col-sm-2 control-label" ></label>
          <div class="col-sm-3">
            <input type="text" class="form-control" id="inputPassword3" name="listName2[]" value="" placeholder="Nhập tên chuyên mục cấp 2">
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="form-group" style="text-align: center;">
      <button type="button" class="btn btn-primary" onclick="addlist()">Thêm chuyên mục cấp 2</button>
    </div>

    <div class="form-group" style="text-align: center;">
      <button type="submit" class="btn btn-info">Thêm</button>
    </div>
  </form>
</main>