<script>
  const title1 = 'Thêm chuyên mục cấp 2'; const title2 = 'Thêm chuyên mục cấp 2'; const title3 = 'Add category 2';
  const id1 = document.getElementById('title1'); const id2 = document.getElementById('title2'); const id3 = document.getElementById('title3');
  id1.innerHTML = title1; id2.innerHTML = title2; id3.innerHTML = title3;
</script>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
  $("#keyCat1").prop("disabled", true); //Disable
  $("#nameCat1").prop("disabled", true); //Disable
  $("#adminCat1").prop("disabled", true); //Disable
</script>
<script>
    $("#li_1").addClass('active');
</script>
{{/section}}
<main>
  <form class="form-horizontal" action="" method="POST">
    <div class="form-group" style="text-align: center;">
      <label class="col-sm-2 control-label">Khóa chuyên mục cấp 1</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" id="keyCat1" value="{{this.db.keyCat1}}" name="keyCat1" readonly="">
      </div>
      <label class="col-sm-2 control-label">Tên chuyên mục cấp 1</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" id="nameCat1" value="{{this.db.nameCat1}}" name="nameCat1" readonly="">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Khóa chuyên mục cấp 2</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" id="keyCat2" value="" name="keyCat2" placeholder="Nhập khóa chuyên mục cấp 2">
      </div>
      <label class="col-sm-2 control-label">Tên chuyên mục cấp 2</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" id="nameCat2" value="" name="nameCat2" placeholder="Nhập tên chuyên mục cấp 2">
      </div>
    </div>
    <div class="form-group" style="text-align: center;">
      <button type="submit" class="btn btn-success">Thêm</button>
    </div>
  </form>
</main>